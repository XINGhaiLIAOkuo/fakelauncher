<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Volume"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.VolumeActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/volume_adjust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/volume_adjust"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60sp" />

    <ImageView
        android:id="@+id/volume_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        app:srcCompat="@drawable/ic_volume_speaker_on" />

    <ProgressBar
        android:id="@+id/volumeBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="50" />

    <TextView
        android:id="@+id/volumeLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="100"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="48sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/volume_ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/volume_rightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_rightButton"
            android:textColor="@color/white"
            android:textSize="48sp" />
    </LinearLayout>
</LinearLayout>